@model List<(DAL.Models.Product Product, int Quantity)>

<h2>Shopping Cart</h2>
<a href="@Url.Action("Index", "Product")" class="btn btn-warning">Back To Items </a>
@if (!Model.Any())
{
    <p>No products in the cart.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Unit Price</th>
                <th>Quantity</th>
                <th>Total Price</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Product.Id</td>
                    <td>@item.Product.Name</td>
                    <td>@item.Product.Price</td>
                    <td>@item.Quantity</td>
                    <td>@(item.Product.Price * item.Quantity)</td> <!-- Total price -->
                    <td>
                        <a href="@Url.Action("RemoveFromCart", "Cart", new { id = item.Product.Id })" class="btn btn-danger">Remove</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Total Price Calculation (Placed Outside HTML Block) -->
    <h4>Total Price: @Model.Sum(item => item.Product.Price * item.Quantity)</h4>

    <a href="@Url.Action("ClearCart", "Cart")" class="btn btn-warning">Clear Cart</a>
}