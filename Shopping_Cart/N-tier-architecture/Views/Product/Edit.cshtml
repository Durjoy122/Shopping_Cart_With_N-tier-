@model DAL.Models.Product

<div class="container mt-4">
    <h2 class="text-primary">Edit Product</h2>
    <div class="card shadow-sm p-4">
        <form asp-action="Edit" method="post">
            <div class="mb-3">
                <label asp-for="Name" class="form-label fw-bold"></label>
                <input asp-for="Name" class="form-control" placeholder="Enter product name" />
            </div>

            <!-- Drop Down select -->
            <div class="mb-3">
                <label asp-for="Price" class="form-label fw-bold"></label>
                @Html.DropDownListFor(
                         model => model.Price,
                         new SelectList(ViewBag.Prices), "Select a Price",
                         new
                         {
                             @class = "form-select"
                         }
                         )
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between">
                <a href="@Url.Action("Index", "Product")" class="btn btn-secondary">Cancel</a>
                <button type="submit" class="btn btn-success">Save</button>
            </div>
        </form>
    </div>
</div>