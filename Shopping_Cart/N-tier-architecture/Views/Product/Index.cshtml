@model IEnumerable<DAL.Models.Product>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary">Product List</h2>
        <div>
            <a href="@Url.Action("Create", "Product")" class="btn btn-primary me-2">
                <i class="bi bi-plus-lg"></i> Add Product
            </a>
            <a href="@Url.Action("Search_name", "Product")" class="btn btn-secondary me-2">
                <i class="bi bi-search"></i> Search Items
            </a>
            <form asp-action="Logout" asp-controller="User" method="post" class="d-inline">
                <a href="@Url.Action("Logout", "User")" class="btn btn-danger">
                    <i class="bi bi-box-arrow-right"></i> Logout
                </a>
            </form>
        </div>
    </div>

    <table class="table table-striped table-hover shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Price</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Id</td>
                    <td>@product.Name</td>
                    <td>$@product.Price</td>
                    <td>
                        <a href="@Url.Action("Details", "Product", new { id = product.Id })" class="btn btn-info btn-sm">
                            <i class="bi bi-eye"></i> Details
                        </a>
                        <a href="@Url.Action("Edit", "Product", new { id = product.Id })" class="btn btn-warning btn-sm">
                            <i class="bi bi-pencil"></i> Edit
                        </a>
                        <a href="@Url.Action("Delete", "Product", new { id = product.Id })" class="btn btn-danger btn-sm">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                        <a href="@Url.Action("AddToCart", "Cart", new { id = product.Id })" class="btn btn-success btn-sm">
                            <i class="bi bi-cart"></i> Add to Cart
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>