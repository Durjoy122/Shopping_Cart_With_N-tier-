@{
    ViewData["Title"] = "Login";
}

<head>
    <!-- Other head content -->
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
</head>

<div class="auth-container">
    <div class="auth-card">
        <h2 class="auth-title">Login</h2>
        <p class="auth-subtitle">Sign in to continue</p>
        <form asp-action="Login" method="post" autocomplete="off" class="auth-form">
            <!-- Hidden fake fields for autocomplete prevention -->
            <input type="text" name="fakeuser" style="display: none;" autocomplete="off" />
            <input type="password" name="fakepassword" style="display: none;" autocomplete="off" />

            <div asp-validation-summary="All" class="auth-validation-summary"></div>

            <div class="form-group">
                <label class="form-label">Email Address</label>
                <input name="email" type="email" value="@ViewData["Email"]"
                       class="form-input" placeholder="Enter your email" autocomplete="off" required />
            </div>

            <div class="form-group">
                <label class="form-label">Password</label>
                <input name="password" type="password" class="form-input"
                       placeholder="••••••••" autocomplete="new-password" required />
            </div>

            <button type="submit" class="auth-button">Sign In</button>
        </form>

        <p class="auth-link-text">
            Don't have an account?
            <a asp-action="Register" class="auth-link">Create one here</a>
        </p>
    </div>
</div>

